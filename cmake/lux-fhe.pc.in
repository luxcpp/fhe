prefix=@CMAKE_INSTALL_PREFIX@
exec_prefix=${prefix}
libdir=${prefix}/lib
includedir=${prefix}/include

Name: lux-fhe
Description: Fully Homomorphic Encryption for Lux crypto stack (TFHE/CKKS/BGV)
Version: @OPENFHE_VERSION@
Requires: lux-lattice
Libs: -L${libdir} -Wl,-rpath,${libdir} -lFHEbin -lFHEpke -lFHEcore
Libs.private: -framework Accelerate
Cflags: -I${includedir}/openfhe -I${includedir}/openfhe/core -I${includedir}/openfhe/binfhe -I${includedir}/openfhe/pke
